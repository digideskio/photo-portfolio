header(class='intro')
    div(class='intro-body')
        div(class='container')
            div(class='row')
                div(class='col-md-8 col-md-offset-2')
                    h1(class='brand-heading') Bruna Rico
                    p(class='intro-text') Photographer * Fashion * Boudoir * Wedding * Portrait
                    a(ng-click='scrollTo("portfolio")', class='btn btn-circle page-scroll')
                        i(class='fa fa-angle-double-down animated')

section(id='portfolio', class='container content-section text-center')
    div(class='row')
        ul(class='photo-grid')
            li(ng-repeat='portfolio in portfolios')
                a(ui-sref='portfolioDetails({id: portfolio.name})')
                    figure
                        img(lvg-caman,
                        lvg-caman-crop-x='{{ portfolio.coverDetails.x }}',
                        lvg-caman-crop-y='{{ portfolio.coverDetails.y }}',
                        lvg-caman-crop-width='{{ portfolio.coverDetails.width }}',
                        lvg-caman-crop-height='{{ portfolio.coverDetails.height }}',
                        id='{{ portfolio.name }}',
                        ng-src='{{ portfolio.cover }}')
                        figcaption
                            p {{ portfolio.title }}