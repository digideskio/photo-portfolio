div(class='container')
    div(class='row')
        p(class='navbar-text')
            a(class='btn btn-success', href='#/photo/new')
                i(class='fa fa-plus')  Add new photo
            span(class='space-5')
            a(class='btn btn-default', ng-click='addPhotosToAlbum()')
                i(class='fa fa-folder-o')  Add photos to album
    div(class='row')
        table(class='table')
            thead
                th
                th
                th Title
                th Short Description
                th Description
                th Actions
            tbody(class='table-striped')
                tr(ng-repeat='photo in photos')
                    td
                        input(type='checkbox', class='add-to-album')
                    td
                        img(ng-src='{{ photo.url }}', class='xsmall-thumbs' title='{{ photo.title }}')
                    td {{ photo.title }}
                    td {{ photo.shortDescription }}
                    td {{ photo.description }}
                    td
                        a(class='btn btn-sm btn-default', ui-sref='photoDetails({id: photo.id})')
                            i(class='fa fa-edit')  Edit
